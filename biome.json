{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "off",
				"useShorthandArrayType": "error",
				"noShoutyConstants": "off",
				"noNonNullAssertion": "error",
				"noImplicitBoolean": "off",
				"noNegationElse": "error"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noUndeclaredVariables": "warn",
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noConsoleLog": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"*.yaml",
			"*.yml",
			"*.env",
			".gitignore",
			".editorconfig",
			"Dockerfile",
			".nvmrc",
			".npmrc",
			"Makefile",
			"*.mk",
			"*.drawio.svg",
			"CODEOWNERS",
			".turbo",
			".Dockerfile",
			".env*",
			"*.md",
			"*.gql",
			"*.ts.snap",
			"./.github",
			".npm-cache",
			".husky",
			".git-hooks",
			"./git-hooks",
			"./*/dist/*.js",
			"./*/dist/*.d.ts",
			"gha-creds*.json",
			"./node_modules",
			"package-lock.json",
			"./*/dist/*.cjs",
			"./*/dist/*.mjs"
		]
	}
}
